          <div class="card-title">
            <h2>Alexandre</h2>
          </div>
          <div class="card-text">
            <p>Fondateur et directeur du Parc Sauvage</p>
          </div>
        </div>

        <div class="team-card-infos text-center d-none d-md-block">
          <%= render('shared/description_alexandre') %>
        </div>
        <div class="team-card-infos-small-devices text-center d-block d-md-none text-center ">
          <%= render('shared/description_alexandre') %>
        </div>
      </div>
    </div>
