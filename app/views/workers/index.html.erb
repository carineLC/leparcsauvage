<% content_for :meta_title, "Le Parc Sauvage - Notre équipe" %>
<% content_for :meta_description, "Le Parc Sauvage - Notre équipe" %>

<%= render(
  'shared/banner',
  img: "team_page.png",
  img_alt: "Equipe",
  img_title: "Equipe",
  title: "L'Équipe du Parc Sauvage"
) %>

<div class="container">
  <div class="row justify-content-center">
