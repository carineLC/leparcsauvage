<% content_for :meta_title, "Le Parc Sauvage - Tarifs" %>
<% content_for :meta_description, "Le Parc Sauvage - Tarifs" %>

<%= render(
  'shared/banner',
  img: "prices.jpg",
  img_alt: "Tarifs",
  img_title: "Tarifs",
  title: "Les tarifs 2019 du Parc Sauvage"
) %>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-lg-6 d-flex">
      <div class="grey-card shadow text-center">
        <h2>Individuel</h2>
        <div class="main-lign grey-card__lign"></div>
          <p class="font-size-subtitle"><strong>Tarif unique</strong></p>
          <p>À partir de 3 ans</p>
          <p class="font-size-subtitle mt-3"><strong>5,00€</strong></p>
        </p>
        <div class="main-lign grey-card__lign"></div>
        <p>Gratuit pour les moins de 3 ans
      </div>
    </div>
    <div class="col-xs-12 col-lg-6 d-flex">
      <div class="grey-card shadow text-center">
        <h2>Groupe</h2>
        <div class="main-lign grey-card__lign"></div>
          <p class="font-size-subtitle"><strong>À partir de 10 personnes</strong></p>
          <p>Par personne</p>
          <p class="font-size-subtitle"><strong>8,00€</strong></p>
          <p  class="mt-3">Par accompagnateur</p>
          <p class="font-size-subtitle"><strong>2,00€</strong></p>
        </p>
        <div class="main-lign grey-card__lign"></div>
          <p><strong>Visites guidées à partir de 2020</strong></p>
          <p>12 personnes maximum</p>
          <p>Durée: 45 minutes</p>
          <p class="mt-3"><strong>50,00€ par groupe</strong></p>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="grey-card shadow text-center">
        <h2>Sur réservation</h2>
        <div class="main-lign grey-card__lign"></div>
          <p><strong>Stages de découverte de la fauconnerie (comprenant entrée et spectacle) à partir de 2020</strong></p>
          <p>À partir de 10 ans</p>
          <p>Durée: 2 heures</p>
          <p class="mt-3"><strong>70,00€ par personne</strong></p>
      </div>
    </div>
  </div>
</div>
