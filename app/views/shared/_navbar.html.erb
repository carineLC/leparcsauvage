          <nav class= "d-flex flex-column">
            <%= link_to "Le parc", "#", class: "navbar-lps__link" %>
            <%= link_to "Actualités", "#", class: "navbar-lps__link" %>
            <%= link_to "L'équipe", "#", class: "navbar-lps__link" %>
