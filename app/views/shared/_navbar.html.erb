  <a href="/" class="navbar-lps__logo">
    <%= image_tag "logo.png" %>
  </a>
  <div class="d-none d-md-block">
    <div class="d-flex align-items-center justify-content-between">
      <%= link_to "Le parc", "#", class: "navbar-lps__link" %>
      <%= link_to "Actualités", "#", class: "navbar-lps__link" %>
      <%= link_to "L'équipe", "#", class: "navbar-lps__link" %>
